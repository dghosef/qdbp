switch := {val |
  {
    Val[val]
    Result[#None{}]
    Case[val then|
      self Val. = val.
        True? [
          result := then!.
          {self Result[#Some result]}]
        False? [self].
    ]
    Default[then|
      self Result.
        Some? [val| val]
        None? [then!.].
    ]
  }
}

str := switch! 5.
  Case 1 then: {"one"}.
  Case 2 then: {"two"}.
  Case 3 then: {"three"}.
  Case 4 then: {"four"}.
  Case 5 then: {"five"}.
  Default then: {"None of the above"}.

str Print.